{
  "angularCompilerOptions": {
    "genDir": "ngfactory",
    "skipMetadataEmit": true,
    "debug": true
  },
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "tmp/ngc",
    "target": "es5",
    "types": [
      "node",
      "hammerjs"
    ]
  },
  "files": [
    "main.ts",
    "main-static.ts"
  ]
}
